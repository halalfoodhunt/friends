<%= bootstrap_form_for(@registration) do |f| %>
  <% if @registration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

      <ul>
      <% @registration.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
    <%= f.hidden_field :membership_id, value: @membership.id %>
  </div>
  <h5>Details of Person 1</h5>
<div class="field">
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.text_field :ic_number %>
  </div>
  <div class="field">
     <%= f.date_select :date_of_birth, start_year: 1950, order: [:day, :month, :year] %>
  </div>
  <h5>Details of Person 2</h5>
  <div class="field">
    <%= f.text_field :name_person_2 %>
  </div>
  <div class="field">
    <%= f.text_field :ic_person_2 %>
  </div>
  <div class="field">
    <%= f.text_field :dob_person_2 %>
  </div>
    <div class="field">
    <%= f.text_field :email_person_2 %>
  </div>
  <h5>Contact & Shipping Details</h5>
  <div class="field">
    <%= f.text_field :contact_number %>
  </div>
  <div class="field">
    <%= f.email_field :email %>
  </div>
    <div class="field">
    <%= f.email_field :shipping_address %>
  </div>
  <div class="field">
    <%= f.text_field :instagram_account %>
  </div>
    <label>Where did you hear about us?</label>
  <div class="field">
    <%= f.check_box :facebook_ads %>
  </div>
  <div class="field">
    <%= f.check_box :facebook_newsfeed %>
  </div>
  <div class="field">
    <%= f.check_box :facebook_video %>
  </div>
  <div class="field">
    <%= f.check_box :instagram %>
  </div>
  <div class="field payment_method">
  <%= label_tag :payment_method %><br>
  <%= radio_button_tag :payment_method, "paypal" %>
  <%= image_tag "http://friends.jumaiyah.com/wp-content/uploads/2017/08/paypal-logo-1.png" %>
    <br>
  <script>
    
              $(document).on("click", "#new_registration input[type='radio']",
                function(e) {
                  if ($("#payment_method_card:checked").val() == "card") {
                    $("fieldset.card_info").show();
                  }
                  else {
                    $("fieldset.card_info").hide();
                  }
                });


  </script>
<div class="actions">
  <%= f.submit "Make Payment", class: "btn", style: "color: white;background: rgb(242, 118, 73);" %>
  <script>
    
              $("form#new_registration").submit( function() {
                $(this).find('input[type=submit]').attr('disabled', 'disabled');
                $(this).find('input[type=submit]').val("Submitting, please wait ...")
              });

  </script>
</div>
<br>
        <% end %>
      </div>